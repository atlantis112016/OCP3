
{% extends "MyAppBilletterieBundle::layout.html.twig" %}

   {% block title %}{{ parent() }} - Recapitulatif {% endblock %}

{% block header %}
<div class="container">
    <div class="slider-container">
        <div class="intro-text">
            <div class="intro-heading"> Récapitulatif de votre Commande </div>
            <div class="intro-lead-in">

                <ul class="nav nav-tabs" id="tab">
                    <li class="nav col-md-3 active" id="Cde"><a href="{{ path('my_app_billetterie_cde',{'id': id}) }}" id="ongletJour" data-toggle="tab">ETAPE 1</a></li>
                    <li class="nav col-md-3 active" id="Cde"><a href="{{ path('my_app_billetterie_billet',{'id': id}) }}" id="ongletJour" data-toggle="tab">ETAPE 2</a></li>
                    <li class="nav col-md-3 active" id="Recap"><a href="{{ path('my_app_billetterie_recap',{'id': id}) }}" id="ongletPaiement" data-toggle="tab">ETAPE 3</a></li>
                    <li class="nav col-md-3 disabled" id="Paiement"><a href="{{ path('my_app_billetterie_paiement',{'id': id}) }}" id="ongletConfirmation" data-toggle="tab">PAIEMENT</a></li>

                <div class="row">
                        <table class="table table-striped table-hover ">
                            <thead>
                            <tr>
                                <th> Numéro de votre Commande :</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr class="info">
                                <td>{{ recapCde.codeReserv }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <table class="table table-striped table-hover ">
                            <thead>
                            <tr>
                                <th> Date de votre visite :</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr class="info">
                                <td>{{ recapCde.dateVisite|localizeddate('full', 'none') }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <table class="table table-striped table-hover ">
                            <thead>
                            <tr>
                                <th> votre E-mail :</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr class="info">
                                <td>{{ recapCde.email }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                    <table class="table table-striped table-hover ">
                        <thead>
                        <tr>
                            <th colspan="4"> Informations sur vos billets : {{ recapCde.nbBillet }} billet(s)</th>
                        </tr>
                        </thead>
                        <tbody id="table-body">
                            {% for recapbillet in recapBillets %}
                                <tr>

                                    <td class="text-left">{{ recapbillet.nom }} {{ recapbillet.prenom }}</td>
                                    <td class="text-left">{{ recapbillet.dateNaissance|date('d/m/Y') }}</td>
                                    <td class="text-right"> {{ recapbillet.montant }} € TTC</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                        <tbody>
                            <tr class="info">
                                <th colspan="2" class="text-left">Total de votre commande</th>
                                <th class="text-right" id="total-price"> {{ recapCde.montantTotal }} € TTC</td>
                            </tr>
                        </tbody>
                        </table>
                </div>
                    <div class="form-group">
                        <div class="cols-sm-10">
                            <a class="btn btn-success pull-left" href={{ path('my_app_billetterie_billet',{'id': id}) }}>
                                <i class="fa fa-arrow-circle-o-left"></i> ETAPE PRECEDENTE</a>
                            <a class="btn btn-success pull-right" href={{ path('my_app_billetterie_paiement',{'id': id}) }}>
                                PAIEMENT <i class="fa fa-arrow-circle-o-right"></i> </a>
                        </div>
                    </div>
                    <div class="wizard-footer">
                        <div class="pull-right">
                            <form action="" method="POST">
                                <script
                                        src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                                        data-key="pk_test_580hRfNUH3FjtZbCEQUCP8sH"
                                        data-amount="{{ recapCde.montantTotal * 100 }}"
                                        data-name="Billetterie du Louvre"
                                        data-description="Paiement sécurisé"
                                        data-image="{{ asset('apple-touch-icon.png') }}"
                                        data-locale="auto"
                                        data-email="{{ recapCde.email }}"
                                        data-label="Régler la commande"
                                        data-zip-code="false"
                                        data-allow-remember-me="false"
                                        data-currency="eur">
                                </script>
                            </form>
                        </div>
                        <div class="clearfix"></div>
                    </div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
    <script type="text/javascript">
        $(".stripe-button-el").addClass("btn btn-danger").removeClass("stripe-button-el");
        $("button span").css("min-height", "");
    </script>
{% endblock %}