
{% extends "MyAppBilletterieBundle::layout.html.twig" %}

   {% block title %}{{ parent() }} - Recapitulatif {% endblock %}

{% block header %}
    $twig = new Twig_Environment($loader);
    $twig->getExtension('core')->setTimezone('Europe/Paris');
<div class="container">
    <div class="slider-container">
        <div class="intro-text">
            <div class="intro-heading"> Récapitulatif de votre Commande </div>
            <div class="intro-lead-in">

                <ul class="nav nav-tabs" id="tab">
                    <li class="nav col-md-3 disabled" id="Cde"><a href="{{ path('my_app_billetterie_cde',{'id': id}) }}" id="ongletJour" data-toggle="tab">ETAPE 1</a></li>
                    <li class="nav col-md-3 disabled" id="Cde"><a href="{{ path('my_app_billetterie_billet',{'id': id}) }}" id="ongletJour" data-toggle="tab">ETAPE 2</a></li>
                    <li class="nav col-md-3 active" id="Recap"><a href="{{ path('my_app_billetterie_recap',{'id': id}) }}" id="ongletPaiement" data-toggle="tab">ETAPE 3</a></li>
                    <li class="nav col-md-3 disabled" id="Paiement"><a href="{{ path('my_app_billetterie_paiement',{'id': id}) }}" id="ongletConfirmation" data-toggle="tab">PAIEMENT</a></li>

                <div class="row">
                        <table class="table table-striped table-hover ">
                            <thead>
                            <tr>
                                <th> Numéro de votre Commande :</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr class="info">
                                <td>{{ recapCde.codeReserv }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <table class="table table-striped table-hover ">
                            <thead>
                            <tr>
                                <th> Date de votre visite :</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr class="info">
                                <td>{{ recapCde.dateVisite|date('D d M Y') }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <table class="table table-striped table-hover ">
                            <thead>
                            <tr>
                                <th> votre E-mail :</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr class="info">
                                <td>{{ recapCde.email }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>

                    <table class="table table-striped table-hover ">
                        <thead>
                        <tr>
                            <th colspan="4"> Informations sur vos billets : {{ recapCde.nbBillet }} billet(s)</th>
                        </tr>
                        </thead>
                        <tbody id="table-body">
                            {% for recapbillet in recapBillets %}
                                <tr>
                                    <td><span class="bold">{{ recapbillet.nom }} {{ recapbillet.prenom }}</span></td>
                                    <td><span class="bold">{{ recapbillet.dateNaissance|date('d/m/Y') }}</span></td>

                                    <td><span class="bold">{{ recapbillet.isTarifReduit }}</span></td>

                                    <td class="text-center"> {{ recapbillet.montant }} € <span class="ttc">TTC</span></td>
                                </tr>
                            {% endfor %}

                            <tr>
                                <td class="text-right bold">Total de votre commande</td>
                                <td class="text-center bold" id="total-price"> {{ recapCde.montantTotal }} € <span class="ttc">TTC</span></td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>


{% endblock %}

{% block javascripts %}
{{ parent() }}

{% endblock %}