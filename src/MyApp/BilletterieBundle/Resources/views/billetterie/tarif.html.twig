 {% extends "MyAppBilletterieBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Grille Tarifaire{% endblock %}

{% block header %}
  
    <div class="container">
        <div class="slider-container">
          <div class="intro-text">
            <div class="intro-heading"> GRILLE TARIFAIRE </div> 
              <div class="intro-lead-in">             
                <table class="table table-striped table-hover ">
                <thead>
                    <tr>
                      <th align="center">Type de Billet</th>
                      <th align="center">Conditions</th>
                      <th align="center">Tarifs</th>
                  </tr>
                </thead>
                <tbody>
                    <tr class="success">
                      <td>Normal</td>
                      <td>A partir de 12 ans</td>
                      <td>1/2 Journée : 8 &euro;<br/>
                          Journée : 16 &euro;</td>
                  </tr>
                  <tr>
                      <td>Enfant</td>
                      <td>De 4 ans Jusqu'à 11 ans
